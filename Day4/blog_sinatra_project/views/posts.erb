<h1>Lista de Posts</h1>

<ul>
    <% @posts.each_with_index do |post, index| %>
        <li>
            <a href="/post_details/<%= index %>">
                <%= post.title %>
            </a>
            <%= post.author %>
        </li>
    <% end %>

</ul>
<a href="/new_post">
    <button>New post</button>
</a>